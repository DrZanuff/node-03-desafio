generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ORG {
  id            String @id @default(uuid())
  email         String @unique
  name          String
  password_hash String
  cep           Int
  address       String
  city          String
  uf            String @db.VarChar(2)
  whatsapp      String
  pets          Pet[]

  @@map("orgs")
}

model Pet {
  id           String         @id @default(uuid())
  name         String
  about        String
  age          PetAge
  size         PetSize
  energy       PetEnergy
  dependency   PetDependency
  environment  PetEnvironment
  photo        String
  requirements String[]
  org_id       String
  org          ORG            @relation(fields: [org_id], references: [id])

  @@index([org_id])
  @@map("pets")
}

enum PetAge {
  FILHOTE
  ADULTO
  SENIOR
}

enum PetSize {
  PEQUENO
  MEDIO
  GRANDE
}

enum PetDependency {
  BAIXO
  MEDIO
  ALTO
}

enum PetEnvironment {
  AMBIENTE_AMPLO
  LOCAIS_PEQUENOS
}

enum PetEnergy {
  UM
  DOIS
  TRES
  QUATRO
  CINCO
}
